<p id="notice"><%= notice %></p>
<div class="companies">
<div class="left_part">
  <%= render partial: 'search_form', object: @search %>
</div>
<div class="right_part">
  <div class="title">
    <h1>Companies</h1>
  </div>
<table class="company_table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Admin</th>
      <th>Address1</th>
      <th>Address2</th>
      <th>City</th>
      <th>Country</th>
      <th>Prime contact</th>
      <th>Prime phone number</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.name %></td>
        <td><%= company.admin_id %></td>
        <td><%= company.address1 %></td>
        <td><%= company.address2 %></td>
        <td><%= company.city %></td>
        <td><%= company.country %></td>
        <td><%= company.prime_contact %></td>
        <td><%= company.prime_phone_number %></td>
        <td><%= company.status %></td>
        <td><%= link_to 'Show', company %></td>
        <td><%= link_to 'Edit', edit_company_path(company) %></td>
        <td><%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Company', new_company_path %>
</div>
</div>
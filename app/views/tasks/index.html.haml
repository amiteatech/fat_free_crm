= styles_for :task
- if @view == "completed"
  - buckets = Setting.unroll(:task_completed)
  = render "title"
- else
  - buckets = Setting.unroll(:task_bucket)
  = render "title"

.log#tasks
  = render :partial => 'pending', :collection => @tasks || [], :locals => { :bucket => 'pending' }
  - if @tasks.values.flatten.blank?
    = render "empty"
  .cl

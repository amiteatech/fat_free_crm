#header
  #welcome
    - if current_user
      #{t :welcome},
      -# This span gets updated on the fly if user changes her name.
      %span#welcome_username= current_user.name
      %span> !&nbsp;&nbsp;

      - if current_user.super_admin == true
        = link_to("Schools", companies_url) << " |"
        = link_to("Html Forms", school_forms_path) << " |"
        = link_to("Tags", task_form_tags_path) << " |"
        = link_to("Tasks", surper_task_report_task_super_path) << " |"
        = link_to("Report", surper_task_report_report_super_path) << " |"
      = link_to(t(:profile), profile_path) << " |"
      - if current_user.is_admin?
        = link_to(t(:profile), profile_path) << " |"
        = link_to(t(:admin), admin_path) << " |"
        = link_to("Option", task_form_tag_values_path) << " |"
        = link_to("Html Form", access_on_forms_path) << " |"
        =# link_to("Items No", school_item_numbers_path) << " |"
      - if current_user.super_admin == false
        = link_to(t(:Documents), documents_path) << " |"
        = link_to(t(:Report), report_path) << " |"
        = link_to("Tasks", tasks_path) << " |"  
      = link_to("<i class='fa fa-print'></i>".html_safe, "javascript:window.print();") << " |"
      = link_to(t(:logout), logout_path, :method => :delete)
      = render "/layouts/jumpbox" 

    - else
      = link_to(t(:login), login_path)
      = link_to(t(:sign_up), signup_path) if can_signup?
      / =# link_to(t(:about), "#", :title => t(:about_ffc), :onclick => "$('#about').dialog({ title: this.title, modal: true }); return false;")
  %h3
    - if current_user && current_user.super_admin == true
      = link_to("Educert Process Control System", companies_path)
    - elsif current_user && current_user.company.present? 
      = link_to(current_user.company.name, root_path)
    - else
      = link_to("Educert Process Control System", root_path) 

<div class="tabs">
  <ul>
    <% tabs.each do |tab| %>
      <li>
        <%= link_to(tab[:url], :class => tab[:active] ? "active" : nil) do %>
          <i class="<%= tab[:icon] %> fa"></i>
          <%= t(tab[:text]) %>
        <% end %>
      </li>
    <% end %>
  </ul>
</div>
<%= show_flash %>
<table cellpadding="0" cellspacing="0" class="<%= :tabbed %>" height="100%" width="100%">
  <tr>
    <td class="<%= :sidebar %>" id="<%= :sidebar %>" valign="<%= :top %>">
      <%= render "layouts/sidebar" %>
    </td>
    <td class="<%= :main %>" id="<%= :main %>" valign="<%= :top %>">
      <%= yield %>
    </td>
  </tr>
</table>

<p id="notice"><%= notice %></p>

<h1>User Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Task</th>
      <th>User</th>
      <th>Comments</th>
      <th>Files</th>
      <th>Position</th>
      <th>Task status</th>
      <th>Approved time</th>
      <th>Rejected time</th>
      <th>Approved</th>
      <th>Rejected</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_tasks.each do |user_task| %>
      <tr>
        <td><%= user_task.task_id %></td>
        <td><%= user_task.user_id %></td>
        <td><%= user_task.comments %></td>
        <td><%= user_task.files %></td>
        <td><%= user_task.position %></td>
        <td><%= user_task.task_status %></td>
        <td><%= user_task.approved_time %></td>
        <td><%= user_task.rejected_time %></td>
        <td><%= user_task.approved %></td>
        <td><%= user_task.rejected %></td>
        <td><%= link_to 'Show', user_task %></td>
        <td><%= link_to 'Edit', edit_user_task_path(user_task) %></td>
        <td><%= link_to 'Destroy', user_task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


.remote
  = form_for([:admin, @user], :html => one_submit_only.merge({:autocomplete => 'off'}), :remote => true) do |f|
    = link_to_close edit_admin_user_path(@user)

    / - if params[:user].present? && (params[:user][:password] != params[:user][:password_confirmation])
    /   #errorExplanation.errorExplanation
    /     %h2 1 error prohibited this user from being saved
    /     %p There were problems with the following fields:
    /     %ul
    /       %li Confirm new password does not match password.
    / - else
    = f.error_messages :object_name => t('user')

    = #f.error_messages.include?("Password confirmation doesn&#39\;t match confirmation")

    = render "admin/users/profile", :f => f, :edit => true
    .buttonbar
      = f.submit t(:save_user)
      #{t :or}
      = link_to_cancel edit_admin_user_path(@user)
